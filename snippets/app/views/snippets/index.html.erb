<h1> Welcome to Snippets </h1>

<% if session[:user_id] %>
  <%= link_to "Profile", user_path(session[:user_id]) %>
  <%= link_to "Log Out", users_logout_path, method: :delete %>
<% else %>
  <%= link_to 'Login', users_login_path %>
  <%= link_to 'Signup', new_user_path %>
<% end %>
<br>
<% if session[:user_id] %>
  <h4> Submit a New Snippet: </h4>
  <%=render 'form'%>
<% end %>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @snippets.each do |snippet| %>
     <tr>
        <td><%= snippet.title %></td>
        <td><%= snippet.code %></td>
        <td><%= link_to 'Show', snippet%></td>
        <td><%= link_to 'Edit', edit_snippet_path(snippet) %></td>
        <td><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= render @snippets %>
