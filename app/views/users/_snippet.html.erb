<div class="snippet" id="<%= snippet.title %>">
	<h2 class="snippet-title"><%= snippet.title %></h2>

	<div id="snippet-readonly" class="editor readonly" alt="<%=snippet.language%>" data-no-turbolink><%= snippet.code %></div>
	<% if snippet.tags %>
	  <div class="tag-list">
	  	Tags:
	  	<ul class="tags">
	  	<% snippet.tags.each do |tag| %>
	  		<li class="tag"><%= tag.title %></li>
	  	<% end %>
	  	</ul>
	  </div>
  <% end %>
  <% if snippet.author.id == session[:user_id] %>
    <div><%= link_to 'Edit', edit_snippet_path(snippet) %></div>
    <div><%= link_to 'Destroy', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
</div>
