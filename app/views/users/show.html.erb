<% if session[:user_id] %>

  <div id="wrapper">

        <!-- Sidebar -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand">
                    <a href="#">
                        &#9651; TOP
                    </a>
                </li>
                <% @user.snippets.each do |snippet| %>
                  <% snippet.tags.each do |tag| %>
                    <li>
                        <a href="#<%= tag.title %>"><%= tag.title.upcase %></a>
                    </li>
                  <% end %>
                <% end %>
            </ul>
        </div>
        <!-- /#sidebar-wrapper -->

        <!-- Page Content -->
        <div id="page-content-wrapper">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                    </div>
                </div>
            </div>
        </div>
        <!-- /#page-content-wrapper -->

    </div>

    <%= render 'cheatsheets/show' %>

<% else %>

  <%= render 'form' %>

<% end %>



