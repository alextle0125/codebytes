<a class="snippet-click" href="/snippets/<%= snippet.id %>" data-no-turbolink>
	<div class="snippet">
		<% if snippet.tags %>
		  <div class="tag-list">
		  	<ul class="tags">
		  	<% snippet.tags.each do |tag| %>
		  		<li class="tag"><%= tag.title %></li>
		  	<% end %>
		  	</ul>
		  </div>
		<% end %>

		<h2 class="snippet-title"><%= snippet.title %><span class="author">by <%= snippet.author.email %></h2>

		<div id="snippet-readonly" class="editor readonly" alt="<%=snippet.language %>" data-no-turbolink><%= snippet.code %></div>
	</div>
</a>
<% if session[:user_id] %>
	<%= link_to "add", add_snippet_path(:user_id => session[:user_id], :id => snippet.id), 'class' => "add-link",'data-no-turbolink' => true %>
<% end %>
<% if snippet.author.id == session[:user_id] %>
	<%= link_to "edit", edit_snippet_path(snippet.id), 'class' => "edit-link", 'data-no-turbolink' => true %>
	<%= link_to "delete", snippet_path(snippet.id), method: :delete, 'class' => "delete-link", 'data-no-turbolink' => true, data: { confirm: "Are you sure you want to permanently delete your code snippet from codebytes?" } %>
<% end %>
