<div class="snippet">
	<h2 class="snippet-title"><%= snippet.title %></h2>

  <% if session[:user_id] %>
    <a href="users/<%= session[:user_id] %>/cheatsheets/newsnippet/<%= snippet.id %>" data-no-turbolink><img class="add_button" src="https://cdn1.iconfinder.com/data/icons/windows-8-metro-style/512/add_list.png" width="3%"></a>
  <% else %>
    <a href="/users/login" data-no-turbolink><img class="add_button" src="https://cdn1.iconfinder.com/data/icons/windows-8-metro-style/512/add_list.png" width="3%"></a>
  <% end %>

	<div id="snippet-readonly" class="editor readonly" alt="<%=snippet.language%>" data-no-turbolink><%= snippet.code %></div>
	<% if snippet.tags %>
	  <div class="tag-list">
	  	Tags: 
	  	<ul class="tags">
	  	<% snippet.tags.each do |tag| %>
	  		<li class="tag"><%= tag.title %></li>
	  	<% end %>
	  	</ul>
	  </div>
  <% end %>
  <% if snippet.author.id == session[:user_id] %>
    <div><%= link_to 'Edit', edit_snippet_path(snippet) %></div>
    <div><%= link_to 'Delete', snippet, method: :delete, data: { confirm: 'Are you sure?' } %></div>
  <% end %>
</div>
